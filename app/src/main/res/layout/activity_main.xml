<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本软件模拟用户注册功能，输入资料后点击“注册”显示信息，点击“清空输入”"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:text="用户名"/>
    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_2"
        android:layout_below="@+id/tv_1"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_2"
        android:text="密码"/>
    <EditText
        android:id="@+id/et_2"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_1"
        android:layout_alignStart="@+id/et_1" />
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_3"
        android:layout_marginTop="25dp"
        android:text="姓名" />
    <EditText
        android:id="@+id/et_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_4"
        android:layout_below="@+id/et_2"
        android:layout_alignStart="@+id/et_1"/>
    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_4"
        android:layout_marginTop="25dp"
        android:text="Email"/>
    <EditText
        android:id="@+id/et_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_5"
        android:layout_below="@+id/et_3"
        android:layout_alignStart="@id/et_1"/>
    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_5"
        android:layout_marginTop="30dp"
        android:text="性别"/>
    <RadioButton
        android:id="@+id/rb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_6"
        android:layout_below="@id/et_4"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rb_1"
        android:layout_below="@+id/et_4"
        android:text="男"
        android:layout_marginTop="8dp"/>
    <RadioButton
        android:id="@+id/rb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_7"
        android:layout_below="@id/et_4"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rb_2"
        android:layout_below="@id/et_4"
        android:text="女"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_6"
        android:layout_marginTop="25dp"
        android:text="年龄"/>
    <Spinner
        android:id="@+id/sp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_9"
        android:layout_below="@id/rb_1"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_9"
        android:layout_marginTop="25dp"
        android:text="爱好"/>
    <Switch
        android:id="@+id/sw_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_10" />
    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_10"
        android:layout_toRightOf="@id/sw_1"
        android:text="看小说"
        android:layout_marginTop="5dp"/>
    <Switch
        android:id="@+id/sw_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_x"
        android:layout_below="@+id/tv_10"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:id="@+id/tv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sw_2"
        android:layout_below="@id/tv_10"
        android:layout_marginTop="5dp"
        android:text="玩游戏" />
    <Switch
        android:id="@+id/sw_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_x"
        android:layout_below="@+id/sw_1"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:id="@+id/tv_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sw_3"
        android:layout_below="@id/sw_1"
        android:layout_marginTop="5dp"
        android:text="睡觉" />
    <Switch
        android:id="@+id/sw_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_1"/>
    <TextView
        android:id="@+id/tv_j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_1"
        android:layout_toRightOf="@id/sw_4"
        android:text="吃饭"
        android:layout_marginTop="5dp"/>
    <Switch
        android:id="@+id/sw_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_4"/>
    <TextView
        android:id="@+id/tv_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_4"
        android:layout_toRightOf="@id/sw_5"
        android:text="看电影"
        android:layout_marginTop="5dp"/>
    <Switch
        android:id="@+id/sw_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_x"
        android:layout_below="@+id/sw_4"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:id="@+id/tv_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sw_6"
        android:layout_below="@id/sw_4"
        android:layout_marginTop="5dp"
        android:text="听音乐" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sw_5"
        android:layout_marginTop="80dp">
        <Button
            android:id="@+id/btn_regist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw_5"
            android:text="注册"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>